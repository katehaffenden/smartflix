<div class="container">
<table class="table table-dark">
  <thead>
  <tr>
    <th scope="col">Poster</th>
    <th scope="col">Title</th>
    <th scope="col">Plot</th>
    <th scope="col">Genre</th>
    <th scope="col">Year</th>
    <th scope="col">Runtime</th>
  </tr>
  </thead>
  <tbody>
  <% @movies.each do |movie| %>
  <tr>
    <td><img src=<%= movie.poster %>, class="img-responsive", width="100px"></td>
    <td><%= movie.title %></td>
    <td><%= movie.plot %></td>
    <td><%= movie.genre %></td>
    <td><%= movie.year %></td>
    <td><%= movie.runtime %></td>
  </tr>
    <% end %>
  </tbody>
</table>
</div>
